---
import { getProps } from "~/components/Shelf/getProps";
import { Shelf } from "~/components/Shelf/Shelf";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();
---

<Layout
  canonical={true}
  meta={{
    description:
      "My to-review bucket list. See what I've yet to read and review. Sort or filter titles by reason, release date, or title.",
  }}
  openGraph={{
    description: props.deck,
    type: "website",
  }}
  title="The Shelf"
>
  <Shelf client:load {...props} />
</Layout>
