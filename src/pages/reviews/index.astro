---
import React from "react";

import { Backdrop } from "~/components/Backdrop";
import { Layout as ComponentLayout } from "~/components/Layout/Layout";
import { getProps } from "~/components/Reviews/getProps";
import { Reviews } from "~/components/Reviews/Reviews";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<Layout
  canonical={true}
  meta={{
    description:
      "All my book and story reviews. Filter by title, kind, review date, work date, or grade. Sort by best or worst, oldest or newest, author, or title.",
  }}
  openGraph={{ description: deck, type: "website" }}
  title="Reviews"
>
  <Fragment slot="meta-theme-color">
    <meta content="rgba(0,0,0,.85)" name="theme-color" />
  </Fragment>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Reviews" />
    <Reviews client:load {...interactiveProps} />
  </ComponentLayout>
</Layout>
