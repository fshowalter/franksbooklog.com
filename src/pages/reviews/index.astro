---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { getLayoutBackdropImageProps } from "~/components/layout/getLayoutBackdropImageProps";
import { Layout } from "~/components/layout/Layout";
import { getReviewsProps } from "~/features/reviews/getReviewsProps";
import { Reviews } from "~/features/reviews/Reviews";

const reviewsProps = await getReviewsProps();
const backdropImageProps = await getLayoutBackdropImageProps("reviews");

const deck = `"You were always the best of them, Lloyd."`;
const metaDescription =
  "All my book and story reviews. Filter by title, kind, review date, work date, or grade. Sort by best or worst, oldest or newest, author, or title.";
---

<AstroPageShell
  canonical={true}
  meta={{
    description: metaDescription,
  }}
  openGraph={{ description: deck, type: "website" }}
  title="Reviews"
>
  <Layout
    backdrop={{
      backdropImageProps,
      deck,
      title: "Reviews",
    }}
    className="bg-subtle"
  >
    <Reviews client:load {...reviewsProps} />
  </Layout>
</AstroPageShell>
