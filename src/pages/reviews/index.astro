---
import { getProps } from "~/components/Reviews/getProps";
import { Reviews } from "~/components/Reviews/Reviews";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();
---

<Layout
  canonical={true}
  meta={{
    description:
      "All my book and story reviews, from 2022 to present day. Filter by title, kind, review date, work date, or grade. Sort by best or worst, oldest or newest, author, or title.",
  }}
  openGraph={{ description: props.deck, type: "website" }}
  title="Reviews"
>
  <Reviews client:load {...props} />
</Layout>
