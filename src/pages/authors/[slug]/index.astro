---
import React from "react";

import { allAuthors } from "~/api/authors";
import { Author } from "~/components/Author/Author";
import { getProps } from "~/components/Author/getProps";
import { AvatarBackdrop, BreadcrumbLink } from "~/components/Backdrop";
import { Layout as ComponentLayout } from "~/components/Layout/Layout";
import Layout from "~/layouts/Layout.astro";

interface Props {
  slug: string;
}

export async function getStaticPaths() {
  const authors = await allAuthors();

  return authors.map((author) => {
    return {
      params: {
        slug: author.slug,
      },
      props: {
        slug: author.slug,
      },
    };
  });
}

const { slug } = Astro.props;
const props = await getProps(slug);

// Separate layout props from interactive props
const {
  avatarImageProps,
  backdropImageProps,
  deck,
  name,
  ...interactiveProps
} = props;

// Create React elements in front matter
const breadcrumbElement = React.createElement(BreadcrumbLink, {
  children: "Authors",
  href: "/authors/",
});
---

<Layout
  canonical={true}
  meta={{
    description: `Reviews of books and stories written by ${name}. Sort reviews by best or worst, newest or oldest. Filter by year, kind, or title.`,
  }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title={`${name} book & story reviews`}
>
  <ComponentLayout className="bg-subtle">
    <AvatarBackdrop
      avatarImageProps={avatarImageProps}
      backdropImageProps={backdropImageProps}
      breadcrumb={breadcrumbElement}
      deck={deck}
      name={name}
    />
    <Author client:load {...interactiveProps} name={name} />
  </ComponentLayout>
</Layout>
