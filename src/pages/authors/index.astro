---
import { Backdrop } from "~/components/backdrop/Backdrop";
import { Layout as ComponentLayout } from "~/components/layout/Layout";
import { Authors } from "~/features/authors/Authors";
import { getProps } from "~/features/authors/getProps";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...clientProps } = props;
---

<Layout
  canonical={true}
  meta={{
    description:
      "A sortable index of authors who contributed to the books and stories reviewed on this site. Sort by name or review count.",
  }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Authors"
>
  <Fragment slot="meta-theme-color">
    <meta content="rgba(0,0,0,.85)" name="theme-color" />
  </Fragment>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Authors" />
    <Authors client:load {...clientProps} />
  </ComponentLayout>
</Layout>
