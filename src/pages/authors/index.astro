---
import { Authors } from "~/components/Authors/Authors";
import { getProps } from "~/components/Authors/getProps";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();
---

<Layout
  canonical={true}
  meta={{
    description:
      "A sortable index of authors who contributed to the books and stories reviewed on this site. Sort by name or review count.",
  }}
  openGraph={{
    description: props.deck,
    type: "website",
  }}
  title="Authors"
>
  <Fragment slot="meta-theme-color">
    <meta content="rgba(0,0,0,.85)" name="theme-color" />
  </Fragment>
  <Authors client:load {...props} />
</Layout>
