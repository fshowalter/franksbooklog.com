---
import { getProps } from "~/components/Readings/getProps";
import { Readings } from "~/components/Readings/Readings";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();
---

<Layout
  canonical={true}
  meta={{
    description:
      "A list of every book or story I've read since 2022. Filter by title, work year, reading year, kind, or edition. Sort by oldest or newest.",
  }}
  openGraph={{ description: props.deck, type: "website" }}
  title="Reading Log"
>
  <Fragment slot="meta-theme-color">
    <meta content="rgba(0,0,0,.85)" name="theme-color" />
  </Fragment>
  <Readings client:load {...props} />
</Layout>
