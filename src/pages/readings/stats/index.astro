---
import { AlltimeStats } from "~/components/Stats/AlltimeStats";
import { getAlltimeStatsProps } from "~/components/Stats/getProps";
import Layout from "~/layouts/Layout.astro";

const props = await getAlltimeStatsProps();
---

<Layout
  canonical={true}
  meta={{
    description:
      "My all-time reading stats. Includes my most-read authors, as well as grade, kind, release year, and edition distributions.",
  }}
  openGraph={{
    description: props.deck,
    type: "website",
  }}
  title="All-Time Stats"
>
  <AlltimeStats {...props} />
</Layout>
