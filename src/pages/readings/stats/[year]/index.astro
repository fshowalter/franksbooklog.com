---
import { allStatYears } from "~/api/stats";
import { getYearStatsProps } from "~/components/Stats/getProps";
import { YearStats } from "~/components/Stats/YearStats";
import Layout from "~/layouts/Layout.astro";

interface Props {
  year: string;
}

export async function getStaticPaths() {
  const statYears = await allStatYears();

  return statYears.map((year) => {
    return {
      params: {
        year: year,
      },
      props: {
        year: year,
      },
    };
  });
}

const { year } = Astro.props;

const props = await getYearStatsProps(year);
---

<Layout
  canonical={true}
  meta={{
    description: `My ${year} reading stats. Includes my most-read authors; as well as kind, year published, and edition distributions.`,
  }}
  openGraph={{
    description: props.deck,
    type: "website",
  }}
  title={`${props.year} Stats`}
>
  <YearStats {...props} />
</Layout>
