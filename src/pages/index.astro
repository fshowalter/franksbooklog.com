---
import { getProps } from "~/features/home/getProps";
import { Home } from "~/features/home/Home";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();
---

<Layout
  canonical={true}
  meta={{
    description:
      "Quality reviews of current, cult, classic, and forgotten books, short stories, and non-fiction. Literature is a relative term.",
  }}
  openGraph={{ description: props.deck, type: "website" }}
  title="Frank's Book Log"
>
  <Fragment slot="meta-theme-color">
    <meta content="rgba(0,0,0,.85)" name="theme-color" />
  </Fragment>
  <Home {...props} />
</Layout>
