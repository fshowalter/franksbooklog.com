---
import { getProps } from "~/components/Home/getProps";
import { Home } from "~/components/Home/Home";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();
---

<Layout
  canonical={true}
  meta={{
    description:
      "Quality reviews of current, cult, classic, and forgotten books, short stories, and non-fiction.",
  }}
  openGraph={{ description: props.deck, type: "website" }}
  title="Frank's Book Log"
>
  <Home {...props} />
</Layout>
